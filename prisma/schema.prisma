generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Friend {
  id    String @id @default(cuid())
  email String @unique
  name  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Conversation {
  id          String   @id @default(cuid())
  threadId    String   @unique
  assistantId String
  title       String
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
